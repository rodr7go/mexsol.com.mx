greenMenu 		= #1a9007
footerColor 	= #1F292F
footerBelowColor = #192126
primaryColor = #ff5456
lightColor  = #dddddd
darkColor   = #154575
successColor	= #2ecc71
highlightColor  = #ffcd2d


// default font "Lato"
@import url('https://fonts.googleapis.com/css?family=Lato')
	
body
	font-family 'Lato', sans-serif
	font-size 16px
	color lightColor

h1
h2
h3
h4
h5
h6
	font-weight normal
	margin 0
	padding 1em 0
	
.Main-section
	padding 1em 0

.section-bg
	background-image linear-gradient(rgba(#446CB3, .7), rgba(#03C9A9, .6)),
	url('../img/main-img.jpg')
	min-height 100vh
	background-size cover
	background-repeat no-repeat
	
.Container
	padding 3em 0
	
.Title
.SubTitle
	padding .5em
	text-align center
	font-size 1em
	text-shadow .07em .07em .15em lighten(primaryColor, 60%)
	
.Title
	font-size 1.5em
	
.InfoSection
	background rgba(white .5)
	width 80%
	border-radius 3px
	margin 2em auto
	padding 1em

	& > h3 > a > img
		width 70px
		margin-left 10px
	
	&>.Image
		width 80%
		margin 0 auto
		
		img
			width 100%
	
	p
		display inline-block

	&>a>img
		width 70px
		margin 0
		margin-left 10px
	
	&-paragraph
		text-align center


//Helpers
.text-primary
	color primaryColor
	text-shadow .07em .07em .15em darken(primaryColor, 60%)

.text-light
	color lightColor
	text-shadow .07em .07em .15em darken(darkColor, 60%)

.text-dark
	color darkColor
	text-shadow .07em .07em .15em darken(lightColor, 60%)

.success-color
	color successColor

.highlight-color
	color highlightColor

.btn
	outline none
	border none
	border-radius 3px
	padding .5em 0
	display inline-block
	text-decoration none
	text-align center
	
.btn-lg
	width 100%
	
.btn-success
	background successColor

@import 'layout/header.styl'
@import 'layout/footer.styl'
@import 'layout/menu.styl'