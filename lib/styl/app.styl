primaryColor = #FEC606
lightColor  = #3498DB
darkColor   = #00587A
successColor	= #71BA51
highlightColor  = #FC575E
whiteColor = #ffffff
darkGreyColor = #333
sectionLightColor = #FAF8F4


// default font "Lato"
@import url('https://fonts.googleapis.com/css?family=Lato')
@import 'https://fonts.googleapis.com/css?family=Candal'
body
	font-family 'Lato', sans-serif
	font-size 16px
	color darkGreyColor

h1
h2
h3
h4
h5
h6
	font-weight normal
	margin 0
	padding 1em 0
	
.Main-section
	background linear-gradient(135deg, rgba(black, .8), rgba(black, .6)),
		url('../img/main-img.jpg')
	
	.section-title
		margin 1em 0
		padding 1em .5em
	
.MainInfo
	padding 4em 0
	.wrapper
		display flex
		justify-content space-between
		flex-flow row wrap

	&.index
		.InfoSection
			width 90%
			box-sizing border-box
			margin 1em auto
			
			@media screen and (min-width 768px)
				width 32%
				
			.image
				height 120px

			.Info
				padding 2em
				padding-bottom 100px
				height 250px
				@media screen and (max-width 768px)
					padding-bottom 125px
				
.iTypes
	transition all .5s ease
	min-height 180vh
	@media screen and (min-width 480px)
		min-height 85vh
	@media screen and (min-width 640px)
		min-height 120vh
	@media screen and (min-width 768px)
		min-height 80vh

	p
		line-height 1.3
		padding .5em
		text-align left
			
	&.bg-isla
		background-attachment fixed
		background-image linear-gradient(135deg, rgba(black, .7)50%, rgba(black, .6) 70%),url("../img/isla.jpg")
	&.bg-red
		background-attachment fixed
		background-image linear-gradient(135deg, rgba(black, .6)50%, rgba(black, .5) 70%),url("../img/red.png")
		
	.wrapper
		display none
		&.active
			display block
		
		
	.iTypes-btns
		position absolute
		left 0
		right 0
		bottom 2em
		
		.active
			background highlightColor
			color whiteColor
			
.Trust
	background sectionLightColor
	
	.wrapper
		flex-flow row wrap
		
		h2
			width 100%
				
	.ANCE
		margin-top 10px
		display block
		@media screen and (min-width 640px)
			width 100%

		.certificate
			width 40%
			
			@media screen and (min-width 640px)
				width 20%
				display inline-block
				margin 0 2em
		

.Contact
	padding 3em 0
	
	&.bg-contact
		background-image linear-gradient(135deg, rgba(black, .6)50%, rgba(black, .5) 70%),
			url("../img/bg-contact.jpg")
		background-size cover
		
	.wrapper
		width 100%
		padding 1em
		margin 0 auto
		
		@media screen and (min-width 768px)
			width 80%
			
		@media screen and (min-width 1024px)
			width 50%

		form			
			input
			textarea
				display block
				width 100%
				margin .5em auto
				padding .3em 0
				box-sizing border-box
				border none
				border-bottom 1px solid white
				outline none
				transition .3s
				background transparent
				color white
				&:focus
					border-bottom 1px solid highlightColor
				
				@media screen and (min-width 768px)
					padding .5em 0
			
			.form-group
				margin-bottom 50px

.Map
	width 80%
	height 80vh
	margin auto
	position fixed
	top 0
	left 0
	right -200vw
	bottom 0
	z-index 999
	
	.close-map
		top -3em
		right -2.5em
		i
			transition all .2s linear
			&:hover
				color highlightColor
	
	&.map-active
		right 0
	
	iframe
		width 100%
		height 100%

.map-popup-container
	top 0
	left 0
	right 0
	bottom 0
	z-index 9
	background rgba(black, .8)
	


.Product
	background #faf8f4
	padding-top 5em
	@media screen and (min-width 1024px)
		background #dedede

	.wrapper
		@media screen and (min-width 640px)
			display flex
			align-items center
			justify-content space-between
			flex-flow row wrap
			
		@media screen and (min-width 1024px)
			margin-left 150px
		
		@media screen and (min-width 1400px)
			margin 0 auto

	&-menu
		width 45px
		position fixed
		background whiteColor
		z-index 2
		left 5px
		
		@media screen and (min-width 1024px)
			width 175px
			left 10px
		
		ul
			margin 0
			padding 0
			box-shadow 2px 2px 5px rgba(black, .5)
		li
			text-align center
			height 45px
			border 1px solid #dddddd
			transition all .2s ease-out
			
			&:hover
				background #ddd
			a
				padding 1em 0
				font-family 'Lato'
				color #929292
				white-space nowrap
				font-size 14px
				
				
				@media screen and (min-width 1024px)
					text-align left

				&::before
					font-family fontAwesome
					display inline-block
					color #929292
					
					@media screen and (min-width 1024px)
						margin 0 5px
						
				&.solar-panels::before
					content '\F069'
				&.solar-batteries::before
					content '\f030'
						
			
			.active
				color highlightColor
				&::before
					color highlightColor
	&-item
		width 70%
		border 1px solid #ebebeb
		margin 0 auto
		padding 1em
		margin-bottom 1em
		
		@media screen and (min-width 640px)
			width 35%
		
		@media screen and (min-width 1024px)
			width 25%
		
		@media screen and (min-width 1280px)
			width 20%
			
	
	&-img
		width 80%
	
	&-title
		margin 0
		padding 0
	
	&-description
		padding 0 .8em
		
		@media screen and (min-width 1024px)
			padding 0 .5em
		


@import 'layout/header.styl'
@import 'layout/footer.styl'
@import 'helpers.styl'
@import 'layout/menu.styl'
@import 'interconexion/interconexion.styl'
@import 'galeria/galeria.styl'