primaryColor = #FEC606
lightColor  = #3498DB
darkColor   = #00587A
successColor	= #71BA51
highlightColor  = #FC575E
whiteColor = #ffffff
darkGreyColor = #333;


// default font "Lato"
@import url('https://fonts.googleapis.com/css?family=Lato')
@import 'https://fonts.googleapis.com/css?family=Candal'
body
	font-family 'Lato', sans-serif
	font-size 16px
	color darkGreyColor

h1
h2
h3
h4
h5
h6
	font-weight normal
	margin 0
	padding 1em 0
	
.Main-section
	padding 0
	min-height 100vh
	background linear-gradient(135deg, rgba(black, .8), rgba(black, .6)),
		url('../img/main-img.jpg')
	
	.section-title
		margin 1em 0
		padding 1em .5em
	
.MainInfo
	background #FAF8F4
	padding 4em 0
	.wrapper
		display flex
		justify-content space-between
		flex-flow row wrap

	&.index
		.InfoSection
			width 90%
			box-sizing border-box
			margin 1em auto
			
			@media screen and (min-width 768px)
				width 30%
				
			.image
				height 150px
				overflow hidden
			.Info
				position relative
				border 1px solid rgba(lightColor, .5)
				padding 2em
				padding-bottom 100px
				background white
				height 250px
				
				> a
					position absolute
					bottom 1.8em
					left 0
					right 0
					margin auto
.iTypes
	min-height 100vh
	position relative
	background-size cover
	transition all .5s ease
	padding-bottom 4em
	@media screen and (min-width 480px)
		min-height 80vh
	
	&.bg-isla
		background-image linear-gradient(135deg, rgba(black, .6)50%, rgba(black, .5) 70%),url("../img/isla.jpg")
	&.bg-red
		background-image linear-gradient(135deg, rgba(black, .6)50%, rgba(black, .5) 70%),url("../img/red.png")
		
	.wrapper
		display none
		&.active
			display block
		
	.iTypes-btns
		position absolute
		left 0
		right 0
		bottom 2em
		
		.active
			background highlightColor
			color whiteColor


@import 'layout/header.styl'
@import 'layout/footer.styl'
@import 'layout/menu.styl'

//Helpers

.bg-parallax
	background-attachment fixed
	background-size cover

.content-center
	display flex !important
	justify-content center
	align-items center

.wrapper
	margin 0 auto
	padding 1em 0
	max-width 1200px
	position relative
	
.title
.subTitle
	padding .5em 0
	text-align center
	
.title
	font-family 'Candal', sans-serif
		
.text-primary
	color primaryColor
	// text-shadow .07em .07em .15em darken(black, 90%)

.text-light
	color lightColor
	// text-shadow .07em .07em .15em darken(darkColor, 60%)

.text-dark
	color darkColor
	// text-shadow .07em .07em .15em darken(lightColor, 60%)

.text-success
	color successColor

.text-highlight
	color highlightColor
	// text-shadow .07em .07em .15em darken(black, 90%)
		
.text-white
	color whiteColor
	
.text-center
	display block
	text-align center
	
.text-justify
	display block
	text-align justify

.btn
	outline none
	border none
	border-radius 3px
	padding .8em 0
	display inline-block
	text-decoration none
	text-align center
	transition .6s all
	
	&:hover
		background lightColor
		color whiteColor
		// box-shadow 320px 0 0 rgba(lightColor, .6) inset

