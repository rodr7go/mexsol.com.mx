.MainMenu
	display none
	background-image linear-gradient(rgba(darkColor, .6), rgba(greenMenu, .8)), url('http://www.diarioextra.com/files/Dnews/images/detail/243073_elusodeenergias.jpg')
	background-repeat no-repeat
	background-size cover
	position absolute
	right 0
	left 0
	
	@media screen and (min-width 768px)
		background none
		width 300px
		left initial

	&-list
		list-style none
		margin 0
		padding 0
		text-align left
		
		
	&-item
		margin-bottom .5em
		background darken(rgba(darkColor, .8), 45%)
		transition all 1s
		
		@media screen and (min-width 768px)
			background darkColor

		a
			padding 1em
			display block
			text-decoration none
			color white
			
		i
			margin-right .5em
			color successColor
			
		@media screen and (min-width 768px)
			&:hover
				background darken(darkColor, 30%)