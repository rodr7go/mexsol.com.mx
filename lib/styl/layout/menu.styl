.MainMenu
	background-image linear-gradient(rgba(darkColor, .6), rgba(successColor, .8)), url('http://www.diarioextra.com/files/Dnews/images/detail/243073_elusodeenergias.jpg')
	right 0
	left 0
	
	@media screen and (min-width 1024px)
		bottom 0
		display inline-block
		background-image none
		width 100%
		text-align center
		
	&-list		
		@media screen and (min-width 1024px)
			text-align right
			display inline-block
			
	&-item
		margin-bottom .5em
		background darken(rgba(darkColor, .8), 50%)
		transition all .6s linear
		
		@media screen and (min-width 1024px)
			&:hover
				.DropDown-list
					display block
		
		@media screen and (min-width 1024px)
			background none
			display inline-block
		a
		span
			transition .5s
			display block
			
		i
			margin-right .5em
		
		@media screen and (min-width 1024px)
			&:hover
				color highlightColor
				box-shadow 200px 0 0 darken(darkColor, 40%) inset
		
		@media screen and (min-width 1024px)
			&.contact
				display none !important
			
		&.contact
			display none
			@media screen and (min-width 1024px)
				&.contact
					display block
					position absolute
					right 0
					top -.8em
					text-shadow -2px 2px 5px rgba(black, .8)
					i
						color whiteColor
				
.DropDown-list
	position absolute
	right 0
	display none
	z-index 99
	width 80%

	@media screen and (min-width 1024px)
		right initial
		width 350px

.DropDown-item
	background darkColor
	border-bottom 1px solid lighten(darkColor, 10%)
	a
		transition all .4s linear
		
		&:hover
			box-shadow 400px 0 0 darken(darkColor, 30%) inset

.DropDown-icon
	position absolute
	right 0
	transform rotate(-90deg)
	transition .5s all
	&.active
		transform rotate(0deg)
	
	@media screen and (min-width 1024px)
		display none !important