.MainMenu
	display none
	background-image linear-gradient(rgba(headerColor, .8), rgba(greenMenu, .9)), url('http://www.diarioextra.com/files/Dnews/images/detail/243073_elusodeenergias.jpg')
	
	&-list
		list-style none
		margin 0
		padding 0
		text-align left
		
	&-item
		margin .5em 0
		background darken(rgba(headerColor, .5), 30%)

		a
			padding 1em
			display block
			text-decoration none
			color white
			
		i
			margin-right .5em
			color #01EE1A