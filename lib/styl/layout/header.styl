.Header
	background headerColor
	padding .5em
	position fixed
	
	@media screen and (min-width 768px)
		background transparent
	
	&-menuBtn
		position absolute
		right 5px
		top 5px
		background none
		border none
		outline none
		cursor pointer
		
		@media screen and (min-width 1024px)
			right 10px
			top 10px
			
		i
			font-size 1.5em
			color tomato
			
			@media screen and (min-width 1024px)
				font-size 2em
	
	&-logo
		width 30%
		margin 0 auto
		
		@media screen and (min-width 640px)
			width 15%
			margin 0
		
		@media screen and (min-width 640px)
			width 10%

		img
			width 100%