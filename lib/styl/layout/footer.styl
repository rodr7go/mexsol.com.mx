.Footer
	text-align center
	// padding 4em 0
	min-height 300px
	width 100%
	position relative
	
	&-logo
		width 100px
		display inline-block
		vertical-align middle
		margin 0 .5em	

		img
			width 100%
	
	&-list
		padding 0
		display inline-block
		list-style none
		text-align center
		margin 0
		vertical-align middle
		
		@media screen and (min-width 640px)
			margin-top -20px

	&-item
		margin .5em
		display inline-block
		
		@media screen and (min-width 640px)
			margin 0 .3em

		a
			font-size 14px
			padding 2px
			color white
			text-decoration none
	
	&-below
		text-align center
		margin-top 2em
		
		span
		a
			font-size 14px
			padding .5em
			display block
			
			@media screen and (min-width 640px)
				display inline-block
			
		span
			color whiteColor
			
		a
			color darken(whiteColor, 20%)

		
	.wrapper
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		.data
			text-shadow 1px 1px 3px rgba(black, .5),
			-1px -1px 3px rgba(black, .5),
			-1px 1px 3px rgba(black, .5),
			1px -1px 3px rgba(black, .5)
			