.Footer
	display inline-block
	background footerColor
	text-align center
	
	@media screen and (min-width 768px)
		text-align center
	
	&-logo
		width 20%
		margin 0 auto
		padding .5em
		
		@media screen and (min-width 480px)
			width 15%
			margin 0
			display inline-block
			
		@media screen and (min-width 1024px)
			width 8%
				
		img
			width 100%
	
	&-list
		padding .5em 0
		display inline-block
		list-style none
		text-align center
		margin 0
		
		@media screen and (min-width 640px)
			vertical-align top
		

	&-item
		padding .5em
		display inline-block
		a
			font-size 12px
			color white
			text-decoration none
			border-bottom 1px solid white
		
		@media screen and (min-width 768px)
			padding .3em
	
	&-below
		background footerBelowColor
		text-align center
		
		span
		a
			font-size 10px
			display block
			padding .5em
			
		span
			color orange
		
		a
			color cadetblue