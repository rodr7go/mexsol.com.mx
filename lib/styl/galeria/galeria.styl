.Galery
	padding-top 3em
	
	&.bg-galery
		background linear-gradient(135deg, rgba(black, .8), rgba(black, .9)),
			url('/img/borrar/1.jpg')
		background-size cover
		background-attachment fixed
		
	&-menu
		overflow-x auto
		white-space nowrap
		
		@media screen and (min-width 1024px)
			overflow-x inherit
	
	&-title
		padding 2em 0 !important
		
	&-list
		display flex
		justify-content space-around
		align-items center
		text-align center
		
		@media screen and (min-width 1024px)
			border 1px solid whiteColor

	&-listItem
		width 100%
		border-right 1px solid whiteColor
		
		&:last-child
			border none
			
			@media screen and (min-width 1024px)
				border-bottom 1px solid whiteColor
		a
			transition all .3s
			display block
			color white
			padding 1em 0
				
			&:hover
				background lightColor
				color white
				
	.active
		color highlightColor

	&-content
		padding .5em
		
	&-title
		padding 1.5em 0
		
			
	&-grid
		display flex
		justify-content space-around
		align-items center
		flex-flow row wrap

	&-img
		max-width 30%
		overflow hidden
		margin .5em 0
		
		@media screen and (min-width 768px)
			width 23%
		
		@media screen and (min-width 1024px)
			width 16%

		img
			width auto
			height 110%